<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AddTransaction"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvCryptoName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="40dp"
            android:paddingEnd="0dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/addTransactionHeadlineTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/btnCloseAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/desBtnClose"
            android:padding="5dp"
            android:src="@drawable/ic_close_add_transaction"
            tools:ignore="RedundantDescriptionCheck" />

    </LinearLayout>

    <include
        layout="@layout/tab_bar_add"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        />

</LinearLayout>