<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPDF"
    android:background="@color/mainBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Fragnent: pdf"
        android:id="@+id/test"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:paddingTop="50dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/rounded_overview_layout_result"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginBottom="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:paddingTop="10dp"
                                android:text="Skutečný zisk"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:paddingEnd="10dp"
                                    android:text="7000000"
                                    android:textColor="@color/green"
                                    android:textSize="35sp"
                                    android:singleLine="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="5dp"
                                    android:singleLine="true"
                                    android:text="CZK"
                                    android:textColor="@color/dirtyWhite"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pdf_24"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:paddingBottom="2dp"
                                android:text="Celkový obrat"
                                android:textColor="@color/dirtyWhite"
                                android:textSize="19dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|right"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    android:singleLine="true"
                                    android:text="50000000"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingBottom="1.5dp"
                                    android:singleLine="true"
                                    android:text="CZK"
                                    android:textColor="@color/dirtyWhite"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:paddingBottom="2dp"
                                android:text="Daňové období"
                                android:textColor="@color/dirtyWhite"
                                android:textSize="19dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|right"
                                    android:paddingBottom="1.5dp"
                                    android:singleLine="true"
                                    android:text="2019"
                                    android:textColor="@color/gray"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|right"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    android:singleLine="true"
                                    android:text="2020"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|left"
                                    android:paddingBottom="1.5dp"
                                    android:singleLine="true"
                                    android:text="2021"
                                    android:textColor="@color/gray"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_edit_text"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search_40"
                    android:padding="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/etSearch"
                    android:hint="Vyhledat kryptoměnu"
                    android:textColorHint="#808080"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:background="@null"
                    android:paddingEnd="5dp"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgBtnDelete"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_delete_40"
                    android:padding="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="Název"
                    android:textColor="@color/gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Množství"
                    android:textColor="@color/gray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="LINK"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ChainLink"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="17dp"
                            android:gravity="bottom"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="123,56"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lightGrayTransparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="BTC"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Bitcoin"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="17dp"
                            android:gravity="bottom"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0,47"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lightGrayTransparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ADA"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Cardano"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="17dp"
                            android:gravity="bottom"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lightGrayTransparent"/>

            </LinearLayout>

            <!--<TextView
                android:id="@+id/descriptionCryptoNameBuy"
                android:text="Skutečný zisk / ztráta"
                android:paddingTop="20dp"
                style="@style/MyTextViewDescriptionStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="50dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:text="720"
                    android:textSize="50dp"
                    android:textColor="@color/white"
                    android:gravity="right|bottom" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="25dp"
                    android:text="CZK"
                    android:textSize="20dp"
                    android:textColor="@color/descripton"
                    android:gravity="bottom"/>

            </LinearLayout>-->

        </LinearLayout>
    </LinearLayout>

</FrameLayout>