<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransactionEdit"
    android:background="@color/mainBackground">

    <LinearLayout
        android:id="@+id/infoTopBar"
        style="@style/NavBarLayout">

        <ImageView
            android:id="@+id/btnCancel"
            style="@style/NavBarIcon"
            android:paddingStart="12dp"
            android:src="@drawable/ic_close"/>

        <TextView
            style="@style/NavBarHeadline"
            android:text="@string/transactionEdit" />

        <ImageView
            android:id="@+id/btnDelete"
            style="@style/NavBarIcon"
            android:src="@drawable/ic_delete"/>

        <ImageView
            android:id="@+id/btnSave"
            style="@style/NavBarIcon"
            android:paddingEnd="12dp"
            android:src="@drawable/ic_save"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewBuy"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/fragmentBackgroundEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descRowFirst"
                        android:text="Koupené množství"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/valueRowFirst"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descRowSecond"
                        android:text="Cena za kus"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/valueRowSecond"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descRowThird"
                        android:text="Cena v měně" />

                    <Spinner
                        style="@style/AddTransactionItemSpinner"
                        android:id="@+id/spinnerRowThird"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout"
                    android:id="@+id/layoutRowFourth"
                    android:visibility="visible">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descRowFourth"
                        android:text="Prodej kryptoměny" />

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/valueRowFourth"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"
                    android:id="@+id/underlineRowFourth"
                    android:visibility="visible"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout"
                    android:id="@+id/layoutRowFifth"
                    android:visibility="visible">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descRowFifth"
                        android:text="Prodané množství"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/valueRowFifth"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"
                    android:id="@+id/underlineRowFifth"
                    android:visibility="visible"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout"
                    android:id="@+id/layoutRowSixth"
                    android:visibility="visible">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descRowSixth"
                        android:text="Cena za kus"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/valueRowSixth"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"
                    android:id="@+id/underlineRowSixth"
                    android:visibility="visible"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:text="Poplatek"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/valueFee"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descDate"
                        android:text="Datum provedení" />

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/valueDate"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descTime"
                        android:text="Čas provedení"/>

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/valueTime"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayoutForImageView">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:text="@string/photo"/>

                    <LinearLayout
                        style="@style/AddTransactionEntryFields">
                        <ImageView
                            style="@style/AddTransactionImageViewPhotoSelected"
                            android:id="@+id/imvButtonShowPhoto"/>

                        <ImageView
                            style="@style/AddTransactionImageViewPhoto"
                            android:id="@+id/imgButtonAddPhoto"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/MyStrongUnderline"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Poznámka k úpravě"
                    android:textColor="@color/textViewDescriptionTextColor"
                    android:textSize="15sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:id="@+id/valueNote"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="textMultiLine"
                    android:textColor="@color/editTextAddTransactionTextColor"
                    android:textSize="20sp"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>