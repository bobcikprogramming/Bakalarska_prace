<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.AddTransactionTabBuy">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewChange"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentBackgroundChange"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionQuantityChangeBuy"
                        android:text="@string/firstRowChange"/>

                    <EditText
                        android:id="@+id/editTextQuantityChangeBuy"
                        style="@style/AddTransactionItemEditText"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:importantForAutofill="no" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionNameChangeSell"
                        android:text="@string/secondRowChange" />

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/textViewNameChangeSell"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionQuantityChangeSell"
                        android:text="@string/thirdRowChange"/>

                    <EditText
                        android:id="@+id/editTextQuantityChangeSell"
                        style="@style/AddTransactionItemEditText"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:importantForAutofill="no" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionPriceChangeBuy"
                        android:text="@string/fourthRowChange"/>

                    <EditText
                        android:id="@+id/editTextPriceChangeBuy"
                        style="@style/AddTransactionItemEditText"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:importantForAutofill="no" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionCurrencyChange"
                        android:text="@string/fifthRowChange" />

                    <Spinner
                        android:id="@+id/spinnerCurrencyChange"
                        style="@style/AddTransactionItemSpinner"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionFeeChange"
                        android:text="@string/sixthRowChange"/>

                    <EditText
                        android:id="@+id/editTextFeeChange"
                        style="@style/AddTransactionItemEditText"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:importantForAutofill="no" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionDateChange"
                        android:text="@string/seventhRowChange" />

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/textViewDateChange"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionTimeChange"
                        android:text="@string/eighthRowChange"/>

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/textViewTimeChange"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayoutForImageView">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionPhotoChange"
                        android:text="@string/newPhoto"/>

                    <LinearLayout
                        style="@style/AddTransactionEntryFields">
                        <ImageView
                            style="@style/AddTransactionImageViewPhotoSelected"
                            android:id="@+id/imvButtonShowPhotoChange"
                            android:contentDescription="@string/photos"/>

                        <ImageView
                            style="@style/AddTransactionImageViewPhoto"
                            android:id="@+id/imgButtonAddPhotoChange"
                            android:contentDescription="@string/newPhoto"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:minHeight="100dp">

                <Button
                    android:id="@+id/buttonSaveChange"
                    style="@style/AddTransactionButton"
                    android:layout_marginBottom="24dp"
                    android:text="@string/btnSave"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

