<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainFragments.FragmentOverView"
    android:background="@color/mainBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:paddingTop="50dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/rounded_overview_layout_result"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginBottom="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:paddingTop="10dp"
                                android:text="Skutečný zisk"
                                android:textColor="@color/overviewNormalText"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:paddingEnd="10dp"
                                    android:text="7 000 000"
                                    android:textColor="@color/green"
                                    android:textSize="35sp"
                                    android:singleLine="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="5dp"
                                    android:singleLine="true"
                                    android:text="CZK"
                                    android:textColor="@color/overviewDescription"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pdf_24"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                style="@style/OverviewAdditionalInfoTopLayout">

                                <TextView
                                    style="@style/OverviewAdditionalInfoTextViewDescription"
                                    android:text="Celkový obrat" />

                                <LinearLayout
                                    style="@style/OverviewAdditionalInfoInsideLayout">

                                    <TextView
                                        style="@style/OverviewAdditionalInfoTextView"
                                        android:text="50 000 000" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                style="@style/OverviewAdditionalInfoTopLayout">

                                <TextView
                                    style="@style/OverviewAdditionalInfoTextViewDescription"
                                    android:text="Daňové období" />

                                <LinearLayout
                                    style="@style/OverviewAdditionalInfoInsideLayout">

                                    <TextView
                                        style="@style/OverviewAdditionalInfoTextViewNextPrevYear"
                                        android:text="2019"/>

                                    <TextView
                                        style="@style/OverviewAdditionalInfoTextView"
                                        android:text="2020"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingBottom="1.5dp"
                                android:singleLine="true"
                                android:text="CZK"
                                android:textColor="@color/overviewDescription"
                                android:textSize="15dp" />

                            <TextView
                                style="@style/OverviewAdditionalInfoTextViewNextPrevYear"
                                android:layout_weight="1"
                                android:text="2021"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp">

            <LinearLayout
                style="@style/SearchTopLinearLayout">
                <LinearLayout
                    style="@style/SearchInsideLinearLayout">

                    <ImageView
                        style="@style/SearchImageViewLeft"/>

                    <EditText
                        style="@style/SearchEditText"
                        android:id="@+id/etSearch"/>

                    <ImageView
                        style="@style/SearchImageViewRight"
                        android:id="@+id/imgBtnDelete"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="Název"
                    android:textColor="@color/overviewListDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Množství"
                    android:textColor="@color/overviewListDescription" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="LINK"
                            android:textStyle="bold"
                            android:textColor="@color/overviewNormalText"
                            android:textSize="22dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ChainLink"
                            android:textColor="@color/overviewDescription"
                            android:textSize="17dp"
                            android:gravity="bottom"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="123,56"
                        android:textColor="@color/overviewNormalText"
                        android:textSize="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/OverviewUnderline"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="BTC"
                            android:textStyle="bold"
                            android:textColor="@color/overviewNormalText"
                            android:textSize="22dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Bitcoin"
                            android:textColor="@color/overviewDescription"
                            android:textSize="17dp"
                            android:gravity="bottom"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0,47"
                        android:textColor="@color/overviewNormalText"
                        android:textSize="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/OverviewUnderline"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ADA"
                            android:textStyle="bold"
                            android:textColor="@color/overviewNormalText"
                            android:textSize="22dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Cardano"
                            android:textColor="@color/overviewDescription"
                            android:textSize="17dp"
                            android:gravity="bottom"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="10"
                        android:textColor="@color/overviewNormalText"
                        android:textSize="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/OverviewUnderline"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>