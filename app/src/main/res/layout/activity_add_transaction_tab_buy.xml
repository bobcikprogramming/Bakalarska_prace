<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addTransaction.AddTransactionTabBuy">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewBuy"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentBackgroundBuy"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionQuantityBuy"
                        android:text="Koupené množství"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/editTextQuantityBuy" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionPriceBuy"
                        android:text="Cena za kus"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/editTextPriceBuy" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionCurrencyBuy"
                        android:text="Cena v měně"/>

                    <Spinner
                        style="@style/AddTransactionItemSpinner"
                        android:id="@+id/spinnerCurrencyBuy"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionFeeBuy"
                        android:text="Poplatek"/>

                    <EditText
                        style="@style/AddTransactionItemEditText"
                        android:id="@+id/editTextFeeBuy" />

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionDateBuy"
                        android:text="Datum provedení"/>

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/textViewDateBuy"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayout">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionTimeBuy"
                        android:text="Čas provedení"/>

                    <TextView
                        style="@style/AddTransactionItemTextView"
                        android:id="@+id/textViewTimeBuy"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/AddTransactionUnderline"/>

                <LinearLayout
                    style="@style/AddTransactionItemLinearLayoutForImageView">

                    <TextView
                        style="@style/AddTransactionItemDescriptionTextView"
                        android:id="@+id/descriptionPhotoBuy"
                        android:text="@string/photo" />

                    <LinearLayout
                        style="@style/AddTransactionEntryFields">
                        <ImageView
                            style="@style/AddTransactionImageViewPhotoSelected"
                            android:id="@+id/imvButtonShowPhotoBuy"/>

                        <ImageView
                            style="@style/AddTransactionImageViewPhoto"
                            android:id="@+id/imgButtonAddPhotoBuy"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:minHeight="100dp">

                <Button
                    android:id="@+id/buttonSaveBuy"
                    style="@style/AddTransactionButton"
                    android:layout_marginBottom="24dp"
                    android:text="Uložit"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>