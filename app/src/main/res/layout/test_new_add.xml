<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    android:orientation="vertical"
    tools:context=".TabBuyFragmentAdd"
    android:id="@+id/fragmentBackgroundBuy">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/descriptionCryptoNameBuy"
                        android:text="Název kryptoměny"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionCryptoQuantityBuy"
                        android:text="Koupené množství"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionCryptoPriceBuy"
                        android:text="Cena za kus"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionCurrencyBuy"
                        android:text="Cena v měně"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionCryptoFeeBuy"
                        android:text="Poplatek"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionCryptoDateBuy"
                        android:text="Datum provedení"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionCryptoTimeBuy"
                        android:text="Čas provedení"
                        style="@style/AddFragmentsTextViewDescription"/>

                    <TextView
                        android:id="@+id/descriptionPhotoBuy"
                        android:text="@string/photo"
                        style="@style/AddFragmentsTextViewDescription"
                        android:layout_height="100dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerNameBuy"
                        style="@style/AddFragmentsSpinner"/>

                    <EditText
                        android:id="@+id/editTextQuantityBuy"
                        style="@style/AddFragmentsEditText"
                        android:inputType="numberDecimal"/>

                    <EditText
                        android:id="@+id/editTextPriceBuy"
                        style="@style/AddFragmentsEditText"
                        android:inputType="numberDecimal"/>

                    <Spinner
                        android:id="@+id/spinnerCurrencyBuy"
                        style="@style/AddFragmentsSpinner"/>

                    <EditText
                        android:id="@+id/editTextFeeBuy"
                        style="@style/AddFragmentsEditText"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:id="@+id/textViewDateBuy"
                        style="@style/AddFragmentsTextView"/>

                    <TextView
                        android:id="@+id/textViewTimeBuy"
                        style="@style/AddFragmentsTextView"/>

                    <ImageButton
                        android:id="@+id/imgButtonAddPhotoBuy"
                        style="@style/AddFragmentsImageButtonPhoto"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonSaveBuy"
                    style="@style/AddFragmentsButton"
                    android:text="Uložit"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>