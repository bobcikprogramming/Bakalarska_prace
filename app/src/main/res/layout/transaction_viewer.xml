<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionViewer"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/infoTopBar"
        android:background="@color/navBarBackground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/btnBack"
            android:text="Zpět"
            android:textColor="@color/button"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Výpis transakce"
            android:textSize="20sp"
            android:textColor="@color/InfoHeadline"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/btnEdit"
            android:text="Upravit"
            android:textColor="@color/button"
            android:textSize="15sp"
            android:gravity="center_vertical|right"
            android:paddingEnd="20dp"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerTransaction"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</LinearLayout>