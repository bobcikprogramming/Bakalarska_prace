<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".RecyclerViewTransactions"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/mainBackground"
android:orientation="vertical"
android:id="@+id/layoutTransactions"
android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/textViewOperation"
            android:text="Nákup"
            android:textColor="@color/headlineBuy"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewDate"
            android:text="1.1.2021"
            android:textColor="@color/descripton"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MyTextViewRecyclerViewHeadline"
                        android:text="Nákup:"
                        android:textColor="@color/dirtyWhite"/>

                    <TextView
                        style="@style/MyTextViewRecyclerViewName"
                        android:id="@+id/textViewNameBuy"
                        android:text="BTC" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/MyTextViewRecyclerViewPriceDescription"
                android:id="@+id/textViewDescriptionPriceBuy"
                android:text="Cena" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MyTextViewRecyclerViewHeadline"
                        android:text="Platba:"
                        android:textColor="@color/dirtyWhite"/>

                    <TextView
                        style="@style/MyTextViewRecyclerViewName"
                        android:id="@+id/textViewNameSell"
                        android:text="EUR"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/MyTextViewRecyclerViewPriceDescription"
                android:id="@+id/textViewDescriptionPriceSell"
                android:text="Cena"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/MyTextViewRecyclerViewQuantityAndPrice"
                android:layout_height="40dp"
                android:id="@+id/textViewQuantityBuy"
                android:text="0.0514700"
                android:textSize="20dp"/>

            <TextView
                style="@style/MyTextViewRecyclerViewQuantityAndPrice"
                android:layout_height="20dp"
                android:id="@+id/textViewPriceBuy"
                android:text="30000.0"
                android:textSize="15dp"/>

            <TextView
                style="@style/MyTextViewRecyclerViewQuantityAndPrice"
                android:layout_height="40dp"
                android:id="@+id/textViewQuantitySell"
                android:text="100.0"
                android:textSize="20dp"/>

            <TextView
                style="@style/MyTextViewRecyclerViewQuantityAndPrice"
                android:layout_height="20dp"
                android:id="@+id/textViewPriceSell"
                android:text="30000.0"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/recyclerViewItemUnderline"/>
</LinearLayout>