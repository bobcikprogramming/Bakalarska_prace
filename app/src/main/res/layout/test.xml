<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    android:orientation="vertical"
    tools:context=".TabAddFragmentBuy">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentBackgroundSell"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoNameChangeBuy"
                        android:text="Nákup kryptoměny"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerNameChangeBuy"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoQuantityChangeBuy"
                        android:text="Koupené množství"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editTextQuantityChangeBuy"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoPriceChangeBuy"
                        android:text="Cena za kus"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editTextPriceChangeBuy"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCurrencyChange"
                        android:text="Cena v měně"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerCurrencyChange"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoNameChangeSell"
                        android:text="Prodej kryptoměny"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/spinnerNameChangeSell"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoQuantityChangeSell"
                        android:text="Prodané množství"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editTextQuantityChangeSell"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoPriceChangeSell"
                        android:text="Cena za kus"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editTextPriceChangeSell"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoFeeChange"
                        android:text="Poplatek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editTextFeeChange"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoDateChange"
                        android:text="Datum provedení"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewDateChange"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCryptoTimeChange"
                        android:text="Čas provedení"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewTimeChange"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/descripton"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:minHeight="100dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionPhotoChange"
                        android:text="@string/photo"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:paddingEnd="20dp"
                        android:paddingStart="10dp">
                        <ImageView
                            android:id="@+id/imvButtonShowPhotoChange"
                            style="@style/AddFragmentsImageButtonPhoto"
                            android:src="@null"
                            android:visibility="gone"
                            android:layout_height="70dp"
                            android:layout_width="70dp" />

                        <ImageButton
                            android:id="@+id/imgButtonAddPhotoChange"
                            style="@style/AddFragmentsImageButtonPhoto"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:minHeight="100dp">

                <Button
                    android:id="@+id/buttonSaveChange"
                    style="@style/AddFragmentsButton"
                    android:layout_marginBottom="32dp"
                    android:text="Uložit"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

