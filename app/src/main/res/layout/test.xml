<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RecyclerViewTransactions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    android:id="@+id/layoutTransactions"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textViewOperation"
                android:text="Nákup"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical|right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:minWidth="70dp"
                android:id="@+id/textViewDate"
                android:gravity="top|right"
                android:text="1.1.2021"
                android:textColor="@color/lightGray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:text="Měna"
                android:gravity="center_vertical|right"
                android:textColor="@color/lightGray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:text="Množství"
                android:gravity="center_vertical|right"
                android:textColor="@color/lightGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/textViewDescriptionFirstColumn"
                android:textSize="15sp"
                android:text="Koupeno"
                android:gravity="center"
                android:textColor="@color/description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textViewNameFirstColumn"
                android:text="Bitcoin"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:minWidth="80dp"
                android:maxWidth="160dp"
                android:id="@+id/textViewQuantityFirstColumn"
                android:text="0.0514700"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/textViewDescriptionSecondColumn"
                android:textSize="15sp"
                android:text="Platba"
                android:gravity="center"
                android:textColor="@color/description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textViewNameSecondColumn"
                android:text="EUR"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:minWidth="80dp"
                android:maxWidth="160dp"
                android:id="@+id/textViewQuantitySecondColumn"
                android:text="100.0"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/dirtyWhiteTransparent"/>
</LinearLayout>