<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    android:orientation="vertical"
    tools:context=".TabAddFragmentBuy">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewBuy"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentBackgroundBuy"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionNameBuy"
                        android:text="Název kryptoměny"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinnerNameBuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionQuantityBuy"
                        android:text="Koupené množství"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:id="@+id/editTextQuantityBuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionPriceBuy"
                        android:text="Cena za kus"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:id="@+id/editTextPriceBuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionCurrencyBuy"
                        android:text="Cena v měně"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinnerCurrencyBuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionFeeBuy"
                        android:text="Poplatek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:id="@+id/editTextFeeBuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionDateBuy"
                        android:text="Datum provedení"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewDateBuy"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionTimeBuy"
                        android:text="Čas provedení"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewTimeBuy"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:minHeight="100dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/descriptionPhotoBuy"
                        android:text="@string/photo"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:paddingEnd="20dp"
                        android:paddingStart="10dp">
                        <ImageView
                            android:id="@+id/imvButtonShowPhotoBuy"
                            style="@style/AddFragmentsImageButtonPhoto"
                            android:src="@null"
                            android:visibility="gone"
                            android:layout_height="70dp"
                            android:layout_width="70dp" />

                        <ImageButton
                            android:id="@+id/imgButtonAddPhotoBuy"
                            style="@style/AddFragmentsImageButtonPhoto"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:minHeight="100dp">

                <Button
                    android:id="@+id/buttonSaveBuy"
                    style="@style/AddFragmentsButton"
                    android:layout_marginBottom="32dp"
                    android:text="Uložit"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

