<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".CryptoSelection"
    android:id="@+id/layoutSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Výběr kryptoměny"
            android:textColor="@color/selectTransactionHeadline"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/imgBtnCloseCryptoSelection"
            android:baselineAligned="false"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_40"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        style="@style/SearchTopLinearLayout"
        android:layout_marginTop="20dp">
        <LinearLayout
            style="@style/SearchInsideLinearLayout">

            <ImageView
                style="@style/SearchImageViewLeft"/>

            <EditText
                style="@style/SearchEditText"
                android:id="@+id/etSearch"/>

            <ImageView
                style="@style/SearchImageViewRight"
                android:id="@+id/imgBtnDelete"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewCryptoSelection"/>

    </LinearLayout>


</LinearLayout>