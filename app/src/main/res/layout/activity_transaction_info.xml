<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionInfo"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/infoTopBar"
        android:background="@color/navBarBackground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:id="@+id/btnCancel"
            android:text="Zahodit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/btnBack"
            android:text="Zpět"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/infoHeadline"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/description"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/btnDelete"
            android:text="Smazat"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_vertical|right"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/btnSave"
            android:text="Uložit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_vertical|right"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/btnEdit"
            android:text="Upravit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_vertical|right"
            android:paddingEnd="20dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewChange"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activityInfoBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesTransactionType"
                        android:text="Typ transakce"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoTransactionType"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesFirstLine"
                        android:text="První řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoFirstLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:visibility="visible"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoFirstLineSpinner"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesSecondLine"
                        android:text="Druhý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoSecondLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesThirdLine"
                        android:text="Třetí řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoThirdLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesFourthLine"
                        android:text="Čtvrtý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoFourthLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:visibility="visible"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoFourthLineSpinner"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesFifthLine"
                        android:text="Pátý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoFifthLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:visibility="visible"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoFifthLineSpinner"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|right"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesSixthLine"
                        android:text="Šestý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoSixthLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesSeventhLine"
                        android:text="Sedmý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoSeventhLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/infoSeventhLineUnderLine"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:id="@+id/infoEighthLineLayout"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesEighthLine"
                        android:text="Osmý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoEighthLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/infoEighthLineUnderLine"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:id="@+id/infoNinthLineLayout"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesNinthLine"
                        android:text="Devátý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoNinthLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/infoNinthLineUnderLine"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:id="@+id/infoTenthLineLayout"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/infoDesTenthLine"
                        android:text="Desátý řádek"
                        android:textSize="15dp"
                        android:textColor="@color/lightGray"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/infoTenthLine"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:background="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/infoTenthLineUnderLine"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:background="@color/description"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>