<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KryptoEvidence" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/navBarSelect</item>
        <item name="colorPrimaryVariant">@color/navBarBachground</item>
        <item name="colorOnPrimary">@color/navBarBachground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="MyTextViewDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/descripton</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="MyImageButtonCalendar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:src">@drawable/ic_calendar_24</item>
    </style>

    <style name="MyImageButtonPhoto">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/rounded_image_button</item>
        <item name="android:src">@drawable/ic_photo_50</item>
    </style>

    <style name="MyButtonSave">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/mainBackground</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>